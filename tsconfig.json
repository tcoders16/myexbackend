{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
    /* remove the "types": ["@cloudflare/workers-types"] line */
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}